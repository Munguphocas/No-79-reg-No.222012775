    private void LOGINActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_LOGINActionPerformed
        // TODO add your handling code here:
          String url = "jdbc:mysql://localhost:3306/university";
       String user = "root";
       String password = "";
        
            try{
           Class.forName("com.mysql.cj.jdbc.Driver");
           Connection connect = DriverManager.getConnection(url,user,password);
           Statement st = connect.createStatement();
           String query = "SELECT * FROM registration WHERE username='"+username.getText()+"' AND password='"+pass.getText()+"'";
           ResultSet rs=st.executeQuery(query);
           if(rs.next()){
           JOptionPane.showMessageDialog(null, "okey your account is available click for homepage");
           dispose();
           homepage hp= new homepage();
           hp.show();
           }
           else{
           JOptionPane.showMessageDialog(null, "ooooh sorry username or password is inorrect");
           }
                   
     }
     catch(Exception e){
         JOptionPane.showMessageDialog(this, e);
     }
    }//GEN-LAST:event_LOGINActionPerformed

